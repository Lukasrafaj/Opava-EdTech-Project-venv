{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask Development Server",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "main_debug.py",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--port", "5002"
            ],
            "jinja": true,
            "justMyCode": true,
            "console": "integratedTerminal"
        }
    ]
}